<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- MontyPay Payment Form Template -->
        <template id="payment_form" name="MontyPay Inline Form" inherit_id="payment.payment_form">
            <xpath expr="//div[hasclass('o_payment_form_container')]" position="inside">
                <t t-if="provider_sudo.code == 'montypay'">
                    <div class="o_payment_form o_payment_form_montypay">
                        <div class="alert alert-info">
                            <i class="fa fa-info-circle me-2"></i>
                            <strong>MontyPay Payment</strong><br/>
                            You will be redirected to MontyPay's secure payment page to complete your transaction.
                        </div>
                    </div>
                </t>
            </xpath>
        </template>
    </data>
</odoo>
