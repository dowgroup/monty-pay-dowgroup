<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- MontyPay Payment Redirect Template -->
        <template id="montypay_redirect" name="MontyPay Redirect">
            <html>
                <head>
                    <title>Redirecting to MontyPay...</title>
                </head>
                <body>
                    <div class="text-center p-5">
                        <h3>Redirecting to MontyPay...</h3>
                        <p>Please wait while we redirect you to MontyPay's secure payment page.</p>
                        <div class="spinner-border text-primary" role="status">
                            <span class="sr-only">Loading...</span>
                        </div>
                    </div>
                    <script type="text/javascript">
                        window.location.href = '<t t-esc="redirect_url"/>';
                    </script>
                </body>
            </html>
        </template>

    </data>
</odoo>
