<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- MontyPay Payment Form Template -->
        <template id="payment_form_montypay" name="MontyPay Payment Form">
            <div class="o_payment_form_montypay p-3">
                <div class="d-flex align-items-center mb-3">
                    <strong class="me-3" style="color: #007bff;">MontyPay</strong>
                    <span class="text-muted">Secure payment powered by MontyPay</span>
                </div>
                
                <div class="alert alert-info">
                    <i class="fa fa-info-circle me-2"></i>
                    You will be redirected to MontyPay's secure payment page to complete your transaction.
                </div>
            </div>
        </template>

    </data>
</odoo>
