<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_payment_provider_form_montypay" model="ir.ui.view">
            <field name="name">MontyPay Payment Provider</field>
            <field name="model">payment.provider</field>
            <field name="arch" type="xml">
                <form string="MontyPay Configuration">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="code" readonly="1"/>
                            <field name="state"/>
                        </group>
                        <group string="MontyPay Settings" invisible="code != 'montypay'">
                            <field name="montypay_merchant_key" password="True"/>
                            <field name="montypay_merchant_pass" password="True"/>
                            <field name="montypay_environment"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>